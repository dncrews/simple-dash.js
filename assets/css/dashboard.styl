body
  color: #3d3d3d
  padding: 0

h1
  margin-top: 0

body.api_type .hide-api { display: none }

.page_title
  font-weight: normal

.refresh
  cursor: pointer
  &.reloading .glyphicon
    color: green;

.app_link, .legend .item
  border-radius: 0

.history_timeline
  label
    border-right: 1px solid #38963F
    border-radius: 0
    float: left
    font-size: 0
    height: 12px
    margin-bottom: 2px
    width: 12px

    &.active
      opacity: .5
      outline: 2px solid red
    &:hover
      border: 1px solid white

.home
  .legend
    text-align: right
  .status-table
    margin-bottom: 20px
    td
      padding: 4px 1px
      width: 210px

.section
  margin-bottom: 20px

  .progress
    display: none
    width: 50%;
    .progress-bar
      width: 100%;

  &.loading
    .progress
      display: block

  &.memory
    .aGraph
       width:300px
       height:60px
    path
      stroke: steelblue
      stroke-width: 1
      fill: none
  .section_heading
    font-weight: normal
    .label
      font-size: 10px
      vertical-align: middle
      a
        color: white
        text-decoration: none

.detail
  .curr_status
    font-size: 40px
    &.success
      color: #5CB85C
    &.warning
      color: #F0AD4E
    &.danger
      color: #D9534F
  .health
    .item
      float: left
      width: 300px
      .metric
        display: block
        font-size: 45px
        margin-top: -13px
        .suffix
          opacity: 0.6
    .title
      display: block
      font-size: 12px
      text-transform: uppercase
      opacity: 0.9
    .error_rate
      width: 200px
    .heroku_issues
      min-height: 100px
    .status_count,
    .heroku_errors,
    .heroku_issues
      width: 100px
      .totals
        .item
          display: inline-block

    .memory
      width: 250px
      .metric
        font-size: 32px
        margin-top: -9px
      .suffix
        font-size: 24px

  .events
    .item
      background-color: #FAFAFA
      margin-bottom: 20px
      padding: 15px
      max-width: 600px
      .icon
        background: url("../img/github_icon.png") top left no-repeat
        // border: 1px solid #666
        float: left
        margin-right: 15px
        // padding: 15px
        text-indent: -500px
        height: 41px
        width: 53px
      .icon
        &.marrow
          background: url("../img/immune_icon.png") top left no-repeat
        &.jenkins
          background: url("../img/jenkins_icon.png") 0px -2px no-repeat
      .change_meta
        display: block
        font-size: 11px
        margin-top: 11px




/* TODO: Separate the changelog out into a separate file... */
