  background-color: #666

  .page_title
    color: #eee

.change_item_container

  .header.row
    margin-bottom: 15px

  .item
    background-color: #FAFAFA
    margin-bottom: 20px
    padding: 15px
    .icon
      background: url("../img/github_icon.png") top left no-repeat
      // border: 1px solid #666
      float: left
      margin-right: 15px
      // padding: 15px
      text-indent: -500px
      height: 55px
      width: 53px
    .icon
      &.marrow
        background: url("../img/immune_icon.png") top left no-repeat
      &.jenkins
        background: url("../img/jenkins_icon.png") 0px -2px no-repeat

    .repo_name
      background-color: #54B7DD
      border-radius: 4px
      color: white
      font-size: 11px
      font-weight: normal
      float: left
      margin-right: 10px
      padding: 2px 6px

    .change_meta
      font-size: 11px
      margin-top: 11px

    .commit_link
      color: #3D3D3D
