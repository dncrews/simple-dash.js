<%
  // figure out the time
  var last_updated_raw = moment(updated).tz("America/Denver");
  var last_updated = last_updated_raw.format('h:mm a');
  var issues = [];


  //figure out CSS classes for uptime_status
  var STATUS_TO_DISPLAY = {
      'good' : 'success',
      'slow' : 'warning',
      'down' : 'danger'
    };


  glyph = "glyphicon-" + ({
    "good" : "ok-sign",
    "slow" : "warning-sign",
    "down" : "minus-sign"
  }[current.stats.status] || "question-sign");
%>


<!DOCTYPE html>
<html>
<head>
  <title>FamilySearch Status</title>
  <link rel="stylesheet" href="../../vendor/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="../../vendor/bootstrap/css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="../../css/dashboard.css">
  <meta name="viewport" content="width=device-width">
  <meta http-equiv="refresh" content="60">
</head>



<body class="detail upstream">

  <nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><a href="../../">Home</a></li>
          <li><a href="../../change">Change</a></li>
          <li><a class="refresh" href="#"><span class="glyphicon glyphicon-refresh"></span> Last updated at <span id="updatedTimestamp" ><%- last_updated %></span></a></li>
        </ul>
      </div><!--/.navbar-collapse -->
    </div>
  </nav>

  <div class="container">
    <div class="mast_head section">
      <h1 class="page_title"><%- app_id %> Status</h1>
      <div id="status_current_cont" class="curr_status <%- STATUS_TO_DISPLAY[current.stats.status] %>">
        <span class="glyphicon <%- glyph %>" style="top: 4px;"></span>
        <span style="text-transform: capitalize;" id="stats_uptime" data-target="status" class="stats_fld">
          <%- current.stats.status %></span>
      </div>
    </div>



    <div class="health section cf hide-upstream">
      <h2 class="section_heading">Health @ <span id="stats_last_updated" data-target="time"><%- last_updated %></span> (<span id="stats_time_elapsed" data-target="time_elapsed" class="stats_fld"><%- last_updated_raw.fromNow() %></span>)</h2>

      <% if (current.error_rate) { %>

      <div class="item error_rate">
        <span class="title">Error rate (5xx / total)</span>
        <span class="metric"><span id="stats_error_rate" data-target="error_rate" lass="stats_fld"><%- current.error_rate %></span><span class="suffix">%</span></span>
      </div>

      <div class="item status_count">
        <span class="title">Status codes</span>
        <div class="totals">
          <span class="item">2xx: <span id="stats_2xx" data-target="status_2xx" class="stats_fld"><%- current.stats['status_2xx'] %></span></span>
          <span class="item">3xx: <span id="stats_3xx" data-target="status_3xx" class="stats_fld"><%- current.stats['status_3xx'] %></span></span>
          <span class="item">4xx: <span id="stats_4xx" data-target="status_4xx" class="stats_fld"><%- current.stats['status_4xx'] %></span></span>
          <span class="item">5xx: <span id="stats_5xx" data-target="status_5xx" class="stats_fld"><%- current.stats['status_5xx'] %></span></span>
        </div>
      </div>

      <% } %>
    </div><!-- /.health-->

    <div class="history section">
      <h2 class="section_heading">Uptime History</h2>
      <!-- FIXME: Generate this from markup, not in JS. Just use the title tag... -->
      <div class="history_timeline cf">
        <% for (var i=0; i < history.length; i++) { %>
        <%
          var history_time = moment(history[i].created_at).tz("America/Denver");
          history[i].stats.time = history_time.format('h:mm a');
          history[i].stats.time_elapsed = history_time.fromNow();
          if (history[i]._raw && history[i]._raw.issues) {
            issues = issues.concat(history[i]._raw.issues);
          }
        %>

          <label
            class="label label-<%- STATUS_TO_DISPLAY[history[i].stats.status] %>"
            data-event-type="upstream"
            data-stats='<%- JSON.stringify(history[i].stats) %>'>
          </label>
        <% } %>
      </div><!-- /.history_timeline -->
    </div><!-- /.history -->

    <%  if (issues.length) { %>
    <div class="section issues">
      <h2 class="section_heading">Known issues</h2>
      <%
        for (var i=0; i<issues.length; i++) {
          var _issue = issues[i];
          var time = moment(_issue.created_at).tz('America/New York').format('h:mm a');
      %>
        <a href="<%- _issue.href %>"><%- time %>: <%- _issue.title %></a>
      <% } %>
    </div>
    <% } %>

  </div><!-- /.container -->

  <script src="http://code.jquery.com/jquery-2.0.0.min.js"></script>
  <script src="../../vendor/bootstrap/js/bootstrap.min.js"></script>
  <script src="../../js/utils.js"></script>
  <script src="../../js/detail_utils.js"></script>
  <!-- <script src="http://mbostock.github.com/d3/d3.v2.js"></script> -->
</body>
</html>
